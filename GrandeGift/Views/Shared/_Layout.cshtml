<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" 
          integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" 
          crossorigin="anonymous">
    <link href="~/css/customcss.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>


</head>
<body class="container" >

    <div class="row">
        <div class="col col-md align-self-md-center  ">

            <div class="container-fluid d-inline-block">

                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <div class="row">
                        <div class="col col-md text-md-right">
                            <p>
                                <div class="d-inline-block">
                                    <span><i class="fas fa-user"></i></span>
                                </div>
                                Hi @User.Identity.Name.
                                You are logged in
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md text-md-right">
                            <p>@Html.ActionLink("Logout", "Logout", "Account")</p>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md text-md-right">
                            <p>@Html.ActionLink("Go to Admin page", "AdminPage", "Admin")</p>

                        </div>
                    </div>
                }

                @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                {
                    <div class="row">
                        <div class="col col-md text-md-right">
                            <p>
                                <div class="d-inline-block"><span><i class="fas fa-user"></i></span></div>
                                Hi @User.Identity.Name.
                                You are logged in
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md text-md-right">
                            <p>@Html.ActionLink("Logout", "Logout", "Account")</p>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col col-md text-md-right">
                            @Html.ActionLink("Customer page", "Details", "CustomerProfile")
                        </div>
                    </div>

                }
                else
                {
                }
                @*<span>|</span>*@
                <div class="row">
                    <div class="col col-md text-md-right">
                        <div class=" d-inline-block">

                            @if (User.Identity.IsAuthenticated)
                            {

                            }
                            else
                            {

                                @Html.ActionLink("Login", "Login", "Account")
                                <span> </span>
                                @Html.ActionLink("Register", "Register", "Account")


                                @*<a href="~/Account/Register">Register</a>*@

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <header class="row ">
        <div class="col col-md-2 align-self-center">
            <!-- Company logo -->
            <a class="navbar-brand" href="~/Home/Index">
                <img id="grandeLogo" class="rounded mx-auto w-100 img-fluid"
                     
                     src="~/imagesApp/GrandeGiftLogo.png" />
            </a>

        </div>
        <!--contact-->
        <div class="col col-xs-3 align-self-center  text-md-right">
            <div class="d-inline-block "><span><i class="fas fa-phone"></i></span></div>
            <div class=" d-inline-block"><p>0444 444 444</p></div>
        </div>
        <!--delivery option-->
        <div class="col col-md-3 align-self-center d-none d-sm-none d-md-block  text-md-right">
            <div class="d-inline-block"><span><i class="fas fa-truck"></i></span></div>
            <div class=" d-inline-block"><p>Delivery options</p></div>
        </div>

        <div class="col col-md align-self-center d-none d-sm-none d-md-block  text-md-right">
            <div class="d-inline-block"><span><i class="fas fa-shopping-cart"></i></span></div>
            <div class=" d-inline-block"><p>$0.00</p></div>
        </div>
    </header>
        <div class="row">
            <nav class="navbar navbar-expand-lg  col-md-12">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="~/Home/Index">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Home/Index">
                                List of hampers
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Shop by category
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Search hampers by category</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown link
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin Tasks
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="~/Category/Create">Add Category</a>
                                    <a class="dropdown-item" href="~/Category/Details">List of Categories</a>
                                    <a class="dropdown-item" href="~/Product/Create">Add New Product</a>
                                    <a class="dropdown-item" href="~/Product/Details">List of Products</a>
                                    <a class="dropdown-item" href="~/Hamper/Create">Add New Gift Hampers</a>
                                    <a class="dropdown-item" href="~/Hamper/Index">List of Hampers</a>



                                </div>
                            </li>
                        }


                        <li class="nav-item">
                            <a class="nav-link" href="#">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Contact Us</a>
                        </li>
                    </ul>

                </div>
            </nav>

        </div>
        <div class="row " id="searchBar" ">
            @*<div class=" id="searchBar">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="Search">
            </div>*@

            <div class=" mt-md-2 my-md-2 col-md float-md-right">
                <form class="form-inline float-right">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>

        </div>
 





    <!-- Content for every page -->

    <main class="row">
        @RenderBody()
    </main>


  
    <!-- Footer -->
    <footer class="row  mt-3 p-2 ">
        <div class="col-md-5 text-center">
            <p>27 Crystal St</p>
            <p>Petersham NSW 2049</p>
            <p>Phone: 0478 888 777</p>
        </div>
        <div class="col-md-4 text-center">
            <p>&copy Grande Gift 2018</p>
        </div>
        <div class="col-md text-center ">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/TermsOfUse">Terms of use</a>
                </li>
            </ul>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/PrivacyPolicy">Privacy Policy</a>
                </li>
            </ul>
           
          
               
         

        </div>
    </footer>







    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/node_modules/popper.js/dist/umd/popper.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>

    <!-- Fontawesome-->
    <script src="https://use.fontawesome.com/4b4d9d89db.js"></script>

    <!-- Footer -->
    @RenderSection("customscript", required: false)


</body>
</html>
