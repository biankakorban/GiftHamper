@model HamperCreateViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col col-md-3">
            <div class="container">

                <div class="row">
                    <div class="col col-md mt-3">
                        <h3 class="text-center">List of products</h3>
                        <ul class="list-group">
                            @foreach (var item in Model.Products)
                            {
                                <li class="list-group-item "> @item.Name</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col col-md">
            <div class="container">
                <div class="row m-3">
                    <h3>Add New Gift Hamper</h3>
                </div>
                <div class="row">
                    <div class="col col-md text-center">
                        <form asp-controller="Hamper" asp-action="Create" method="post" enctype="multipart/form-data">
                            <span class="row mt-2" asp-validation-summary="ModelOnly"></span>
                            <div class="row mb-2 ">
                                <div class="col col-md-9 mx-auto">
                                    <label class="font-weight-bold" asp-for="Name">Name of the hamper</label>
                                    <input asp-for="Name" class="form-control text-center" placeholder="Name of the hamper" />
                                    <span asp-validation-for="Name" class="text-danger" />
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col col-md-9 mx-auto">
                                    <select asp-for="CategoryId" class="form-control"
                                            asp-items="@(new SelectList(ViewBag.CategoryList, "CategoryId", "Name")) "></select>
                                </div>
                            </div>
                            <div class="row mb-2 ">
                                <div class="col col-md-9 mx-auto">
                                    <label class="font-weight-bold" asp-for="Price">Price</label>
                                    <input asp-for="Price" class="form-control text-center" placeholder="Price" />
                                    <span asp-validation-for="Price" class="text-danger" />
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col col-md-9 mx-auto">
                                    <p>Upload Image</p>
                                    <input type="file" name="image" />
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col col-md">
                                    <button type="submit" class="btn btn-warning font-weight-bold">Add new gift hamper and Continue</button>

                                </div>
                            </div>
                        </form>
                    </div>


                </div>

            </div>

        </div>

    </div>


</div>
