@*script for modal button*@

@section customscript{
	<script>
        $(document).ready(function () {
            $("h1").click(function () {
                alert("Hello");
            });

            $("#myModalButton").click(function () {
                $("#exampleModal").modal("show");
            });

            $(".myBtn").click(function () {
