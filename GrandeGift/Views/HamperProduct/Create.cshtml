@model HamperProductCreateViewModel

<div class="container">
	<div class="row">
		<div class="col-sm m-3 text-center">
			<h3>Gift Hamper Details</h3>
		</div>
	</div>
    <div class="row">
		<div class="col-sm-6">
			<p>Hamper Name: @Model.Name</p>
			<p>Category Name: @Model.CategoryName</p>
			<p>Hamper Price: @Html.DisplayFor(model => model.Price)</p>
		</div>
		<div class="col-sm">
			<img src="~/imagesApp/@Model.Hamper.Image" alt="Image for the hamper" width="200" />
		</div>
    </div>
   





	@*modal - to attach product the the hamper*@
    <div class="row">
        <!-- Button trigger modal -->
        <button id="myModalButton" type="button" class="btn btn-warning">
            Attach product to hamper
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">List of products</h5>
                        <button type="button" class="myBtn close" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
					<div>
						
					</div>



					<div class="modal-body">
						<ul class="list-group">
							@foreach (var item in Model.ProductList)
							{
								<li class="list-group-item">@item.Name
									<a class="btn btn-warning float-sm-right" href="/HamperProduct/Attach/@Model.HamperId/@item.ProductId">Attach Product</a>
								</li>
							}

						</ul>
						
