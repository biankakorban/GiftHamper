@model AccountLoginViewModel

<div class="container">
	<div class="row mt-4 mb-4">
		<div class="col col-md-12 text-center ">
			<h4>REGISTERED CUSTOMERS</h4>
			<p>If you have an account, sign in with your email address.</p>
		</div>
	</div>
	<div class="row">
				<div class="container bg-light">
					<form asp-controller="Account" asp-action="Login" method="post">
						@*<div class="row">
							<div class="col-sm mt-2" asp-validation-summary="All"></div>
						</div>*@
						<div class="row mb-2">
							<div class="col-sm-6 mx-auto">
								<label asp-for="UserName"></label>
								<input asp-for="UserName" class="form-control" placeholder="Username" />
								<span asp-validation-for="UserName" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-4 ">
							<div class="col-sm-6 mx-auto ">
								<label asp-for="Password"></label>
								<input asp-for="Password" class="form-control" placeholder="Password" />
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-4">
							<div class="col-sm-6 mx-auto ">
								<label asp-for="RememberMe" class=" mx-auto"></label>
								<input asp-for="RememberMe" type="checkbox" class="mx-auto" />
							</div>
                        </div>
						<div class="row mb-2 ">
								<input class="col-sm-6 btn btn-warning mx-auto" type="submit" value="Login" />
						</div>
				</form>
				</div>
			</div>
		</div>

